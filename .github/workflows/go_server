# .github/workflows/deploy.yml
name: Deploy Go Web Server

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build-and-run:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up Go
      uses: actions/setup-go@v4
      with:
        go-version: '1.21'

    - name: Build Go server
      run: go build -o myserver server.go

    - name: Run Go server (testing only)
      run: |
        nohup ./myserver &
        sleep 10
        curl -I http://localhost:8080
